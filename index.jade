html(lang='en')
    head
        title Immersive Applications
        meta(name="description", content="Applications by Immersive Applications")
        meta(name="keywords", content="apps, immersive applications, applications, mac, iphone, whats for lunch, app factory, partytonight, bs generator, bs document generator, matcher")
        link(href='http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/css/bootstrap-combined.min.css', rel='stylesheet', type='text/css')
